{  "author"     : "ELLIOTTCABLE (http://ell.io/tt)"

 , "name"       : "giraphe"
 , "version"    : "1.1.1"
 , "license"    : "ISC"

 , "description": "A exceedingly-generic graph walking API."
 , "repository" : "ELLIOTTCABLE/giraphe"

 , "main"       : "./giraphe.js"

 , "scripts": {
      "test"                   : "./test.sh"
    , "build"                  : "./build.sh"
    , "prepublish"             : "./build.sh"
   }

 , "directories": {
      "lib"                    : "./"
    , "src"                    : "./"
    , "test"                   : "./Tests"
    , "doc"                    : "./Docs"
    , "coverage"               : "./Docs/Coverage"
   }

 , "babel": {
      "presets"                : ["es2015", "stage-2"]
    , "plugins"                : ["transform-runtime", "transform-flow-comments"]

    , "sourceMaps"             : "inline"
    , "compact"                : false

    , "env": {
         "coverage": {
            "plugins": [ "espower", "empower-assert", "istanbul" ]
         }
       , "test": {
            "plugins": [ "espower", "empower-assert" ]
         }
       , "development": {
            "plugins": [ "espower", "empower-assert" ]
         }
       , "production": {
            "plugins": [ "unassert" ]
         }
      }
   }

 , "nyc": {
      "all"                    : true
    , "include"                : ["giraphe.es6.js"]
    , "extension"              : [".es6.js"]

    , "require"                : ["babel-register"]

    , "sourceMap"              : true
    , "instrument"             : false
   }

 , "mocha": {
      "ui"                     : "bdd"
    , "reporter"               : "mocha-fivemat-reporter"
   }


 , "dependencies": {
      "debug"                  : "^2.6.8"
    , "lodash"                 : "^4.13.1"
    , "babel-runtime"          : "^6.9.2"
   }

 , "devDependencies": {
      "babel-cli"                                      : "^6.24.1"
    , "babel-register"                                 : "^6.24.1"
    , "babel-preset-es2015"                            : "^6.24.1"
    , "babel-preset-stage-2"                           : "^6.24.1"
    , "babel-plugin-transform-runtime"                 : "^6.9.0"
    , "babel-plugin-transform-flow-comments"           : "^6.8.0"
    , "babel-plugin-espower"                           : "^2.2.0"
    , "babel-plugin-istanbul"                          : "^4.1.4"

    , "power-assert"                                   : "^1.4.4"
    , "babel-plugin-unassert"                          : "^2.1.2"
    , "babel-preset-power-assert"                      : "^1.0.0"

    , "mocha"                  : "^3.4.2"
    , "sinon"                  : "^2.3.4"
    , "nyc"                    : "^10.1.2"
   }
}
